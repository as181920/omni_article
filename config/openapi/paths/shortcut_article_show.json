    "parameters": [
      {
        "name": "uid",
        "in": "path",
        "required": true,
        "description": "Article uid",
        "schema": {
          "type": "string"
        },
        "example": "ART8xP1mK"
      }
    ],
    "responses": {
      "200": {
        "description": "Article detail",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "../components/schemas/article_detail.json"
            }
          }
        }
      }
    }
  }
}
